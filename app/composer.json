{
    "require": {
        "php": ">=5.5.0",
        "slim/slim": "^3.1",
        "slim/php-view": "^2.0",
        "monolog/monolog": "^1.17",
        "doctrine/orm": "^2.5",
        "slim/twig-view": "2.1.0"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0"
    },
    "autoload": {
        "psr-4": {
            "Entidades\\": "src/doctrine/Entidades/",
            "Src\\": "src/"
        },
        "classmap": [
            "src/controller"
        ]
    },
    "config": {
        "process-timeout" : 0,
        "platform": {"php": "7.1"}
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit"
    }

}
